<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firmwise.controller.FarmProfileController">
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   <children>
      <Label text="Farm Profile Settings">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <VBox spacing="10.0">
         <children>
            <Label text="Farm Name" />
            <TextField fx:id="farmNameField" promptText="Enter Farm Name" />
         </children>
      </VBox>
      <VBox spacing="10.0">
         <children>
            <Label text="City" />
            <TextField fx:id="cityField" promptText="Enter City (e.g. Dhaka)" />
         </children>
      </VBox>
      <VBox spacing="10.0">
         <children>
            <Label text="Country" />
            <TextField fx:id="countryField" promptText="Enter Country (e.g. Bangladesh)" />
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#saveProfile" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2ECC71;" text="Save Profile" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label text="Note: Weather data will be updated based on this location." textFill="#7f8c8d" />
   </children>
</VBox>
