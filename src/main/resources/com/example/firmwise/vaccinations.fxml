<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firmwise.controller.VaccinationController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Vaccination Tracker">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <HBox spacing="10.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <ComboBox fx:id="animalIdBox" prefWidth="150.0" promptText="Animal ID" />
                  <TextField fx:id="vaccineField" promptText="Vaccine Name" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <DatePicker fx:id="dateGivenPicker" promptText="Date Given" />
                  <DatePicker fx:id="nextDuePicker" promptText="Next Due Date" />
               </children>
            </VBox>
            <TextArea fx:id="notesArea" prefHeight="60.0" prefWidth="200.0" promptText="Notes" />
            <Button mnemonicParsing="false" onAction="#addVaccination" prefHeight="60.0" style="-fx-background-color: #2ECC71;" text="Add Record" textFill="WHITE" />
         </children>
      </HBox>
      <TableView fx:id="vaccinationTable" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colAnimalId" prefWidth="75.0" text="Animal ID" />
            <TableColumn fx:id="colVaccine" prefWidth="150.0" text="Vaccine" />
            <TableColumn fx:id="colDateGiven" prefWidth="100.0" text="Date Given" />
            <TableColumn fx:id="colNextDue" prefWidth="100.0" text="Next Due" />
            <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
        </columns>
      </TableView>
   </children>
</VBox>
