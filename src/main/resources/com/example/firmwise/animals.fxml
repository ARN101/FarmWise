<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firmwise.controller.AnimalController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Livestock Management">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <HBox spacing="10.0">
         <children>
            <TextField fx:id="typeField" promptText="Type (e.g. Cow)" />
            <TextField fx:id="nameField" promptText="Name/Tag" />
            <TextField fx:id="breedField" promptText="Breed" />
            <TextField fx:id="ageField" promptText="Age" />
            <ComboBox fx:id="healthBox" prefWidth="150.0" promptText="Health Status" />
            <Button mnemonicParsing="false" onAction="#addAnimal" style="-fx-background-color: #2ECC71;" text="Add" textFill="WHITE" />
         </children>
      </HBox>
      <TableView fx:id="animalTable" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
            <TableColumn fx:id="colName" prefWidth="100.0" text="Name" />
            <TableColumn fx:id="colBreed" prefWidth="100.0" text="Breed" />
            <TableColumn fx:id="colAge" prefWidth="50.0" text="Age" />
            <TableColumn fx:id="colHealth" prefWidth="100.0" text="Health" />
        </columns>
      </TableView>
   </children>
</VBox>
