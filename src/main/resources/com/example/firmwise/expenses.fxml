<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="700.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.firmwise.controller.ExpenseController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label text="Expense Tracker">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label fx:id="totalExpensesLabel" text="Total Expenses: BDT 0.00" textFill="#e74c3c">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <ComboBox fx:id="categoryBox" prefWidth="150.0" promptText="Category" />
                  <TextField fx:id="amountField" promptText="Amount" />
               </children>
            </VBox>
            <VBox spacing="5.0">
               <children>
                  <DatePicker fx:id="datePicker" promptText="Date" />
                  <ComboBox fx:id="animalIdBox" prefWidth="150.0" promptText="Linked Animal (Opt)" />
               </children>
            </VBox>
            <TextArea fx:id="notesArea" prefHeight="60.0" prefWidth="200.0" promptText="Notes" />
            <Button mnemonicParsing="false" onAction="#addExpense" prefHeight="60.0" style="-fx-background-color: #2ECC71;" text="Add Expense" textFill="WHITE" />
         </children>
      </HBox>
      <TableView fx:id="expenseTable" prefHeight="400.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colCategory" prefWidth="100.0" text="Category" />
            <TableColumn fx:id="colAmount" prefWidth="100.0" text="Amount" />
            <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="colAnimalId" prefWidth="75.0" text="Animal ID" />
        </columns>
      </TableView>
   </children>
</VBox>
